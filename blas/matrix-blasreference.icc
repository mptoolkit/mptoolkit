void
matrix_add_inner_prod(char Atrans, char Btrans, int M, int N,
		      double const* A, int ldA,
		      double const* B, int ldB,
		      double& r)
{
   double rr = 0.0;
   if (Atrans == 'N' && Btrans == 'N')
   {
      for (int c = 0; c < N; ++c)
      {
         for (int r = 0; r < M; ++r)
         {
	    rr += A[r] * B[r];
	 }
         A += ldA;
         B += ldB;
      }
   }
   else
   {
      PANIC("not yet implemented");
   }
   r += rr;
}

void
matrix_add_inner_prod(char Atrans, char Btrans, int M, int N,
		      std::complex<double> const* A, int ldA,
		      std::complex<double> const* B, int ldB,
		      std::complex<double>& r)
{
   std::complex<double> rr = 0.0;
   if (Atrans == 'N' && Btrans == 'N')
   {
      for (int c = 0; c < N; ++c)
      {
         for (int r = 0; r < M; ++r)
         {
	    rr += std::conj(A[r]) * B[r];
	 }
         A += ldA;
         B += ldB;
      }
   }
   else
   {
      PANIC("not yet implemented");
   }
   r += rr;
}

inline
void
matrix_inner_prod(char Atrans, char Btrans, int M, int N,
		  double const* A, int ldA,
		  double const* B, int ldB,
		  double& r)
{
   r = 0.0;
   matrix_add_inner_prod(Atrans, Btrans, M, N, A, ldA, B, ldB, r);
}

inline
void
matrix_inner_prod(char Atrans, char Btrans, int M, int N,
		  std::complex<double> const* A, int ldA,
		  std::complex<double> const* B, int ldB,
		  std::complex<double>& r)
{
