      x += incx;
   }
   r = rr;
}

template <typename T>
std::enable_if_t<blas::is_numeric_v<T>, void>
vector_inner_prod(int N, T const* x, int incx, T const* y, int incy, T& r)
{
   T rr = 0.0;
   for (int i = 0; i < N; ++i)
   {
      rr += (*x) * (*y);
      x += incx;
      y += incy;
   }
   r = rr;
}

void
vector_inner_prod(int N, std::complex<double> const* x, int incx, 
		  std::complex<double> const* y, int incy, 
		  std::complex<double>& r)
{
   std::complex<double> rr = 0.0;
   for (int i = 0; i < N; ++i)
   {
      rr += std::conj(*x) * (*y);
      x += incx;
      y += incy;
   }
   r = rr;
}

template <typename T>
std::enable_if_t<blas::is_numeric_v<T>, void>
vector_add_inner_prod(int N, T const* x, int incx, T const* y, int incy, T& r)
{
   T rr = 0.0;
   for (int i = 0; i < N; ++i)
   {
      rr += std::conj(*x) * (*y);
      x += incx;
      y += incy;
   }
   r += rr;
}

//
// matrix_clear
//

inline
void matrix_clear(int M, int N, double* A, int lda)
{
   if (lda == N)
   {
      std::memset(A, 0, M*N*sizeof(double));
   }
   else
   {
      for (int c = 0; c < N; ++c)
      {
         std::memset(A, 0, M*sizeof(double));
         A += lda;
      }
   }
}

inline
void matrix_clear(int M, int N, std::complex<double>* A, int lda)
{
   if (lda == N)
   {
      std::memset(A, 0, M*N*sizeof(std::complex<double>));
   }
   else
   {
      for (int c = 0; c < N; ++c)
      {
         std::memset(A, 0, M*sizeof(std::complex<double>));
         A += lda;
      }
   }
}

//
// matrix_fill
//

inline
void matrix_fill(double alpha, int M, int N, double* A, int lda)
{
   for (int c = 0; c < N; ++c)
   {
      for (int r = 0; r < M; ++r)
      {
         A[c*lda+r] = alpha;
      }
   }
}

inline
void matrix_fill(std::complex<double> alpha, int M, int N, std::complex<double>* A, int lda)
{
   for (int c = 0; c < N; ++c)
   {
      for (int r = 0; r < M; ++r)
      {
         A[c*lda+r] = alpha;
      }
   }
}

template <typename T>
decltype(norm_frob_sq(std::declval<T>()))
matrix_norm_frob_sq(int M, int N, T const* A, int lda)
{
   decltype(norm_frob_sq(std::declval<T>())) Result{};
   for (int c = 0; c < N; ++c)
   {
      for (int r = 0; r < M; ++r)
      {
	 Result += norm_frob_sq(A[c*lda+r]);
      }
   }
   return Result;
}
   
double matrix_norm_frob_sq(int M, int N, std::complex<double>* A, int lda);


//
// matrix_copy
//

inline
void matrix_copy(char Atrans, int M, int N, double const* A, int lda, double* B, int ldb)
{
   if (Atrans == 'N')
   {
      if (lda == N && ldb == N)
      {
         std::memcpy(B, A, M*N*sizeof(double));
      }
      else
      {
         for (int c = 0; c < N; ++c)
         {
            std::memcpy(B, A, M*sizeof(double));
            A += lda;
            B += ldb;
         }
      }
   }
   else
   {
      // transpose
      for (int c = 0; c < N; ++c)
      {
         for (int r = 0; r < M; ++r)
         {
            B[r] = A[r*lda + c];
         }
         B += ldb;
      }
   }
}

inline
void
matrix_copy(char Atrans, int M, int N,
            std::complex<double> const* A, int lda,
            std::complex<double>* B, int ldb)
{
   if (Atrans == 'N')
   {
      // normal
      if (lda == N && ldb == N)
      {
         std::memcpy(B, A, M*N*sizeof(double));
      }
      else
      {
         for (int c = 0; c < N; ++c)
         {
            std::memcpy(B, A, M*sizeof(double));
            A += lda;
            B += ldb;
         }
      }
   }
   else if (Atrans == 'R')
   {
      // conjugate
      for (int c = 0; c < N; ++c)
      {
         for (int r = 0; r < M; ++r)
         {
            B[r] = conj(A[r]);
         }
         A += lda;
         B += ldb;
      }
   }
   else if (Atrans == 'T')
   {
      // transpose
      for (int c = 0; c < N; ++c)
      {
         for (int r = 0; r < M; ++r)
         {
            B[r] = A[r*lda + c];
         }
         B += ldb;
      }
   }
   else if (Atrans == 'C')
   {
      // hermitian conjugate
      for (int c = 0; c < N; ++c)
      {
         for (int r = 0; r < M; ++r)
         {
            B[r] = conj(A[r*lda + c]);
         }
         B += ldb;
      }
   }
}

