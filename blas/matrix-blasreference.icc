//
// vector_clear
//

inline
void vector_clear(int N, double* y, int incy)
{
   if (incy == 1)
   {
      std::memset(y, 0, N*sizeof(double));
   }
   else
   {
      for (int i = 0; i < N; ++i)
      {
         *y = 0;
         y += incy;
      }
   }
}

inline
void vector_clear(int N, std::complex<double>* y, int incy)
{
   if (incy == 1)
   {
      std::memset(y, 0, N*sizeof(std::complex<double>));
   }
   else
   {
      for (int i = 0; i < N; ++i)
      {
         *y = 0;
         y += incy;
      }
   }
}

//
// vector_fill
//

inline
void vector_fill(double alpha, int N, double* y, int incy)
{
   for (int i = 0; i < N; ++i)
   {
      *y = alpha;
      y += incy;
   }
}

inline
void vector_fill(std::complex<double> alpha, int N, std::complex<double>* y, int incy)
{
   for (int i = 0; i < N; ++i)
   {
      *y = alpha;
      y += incy;
   }
}

//
// vector_copy
//

inline
void
vector_copy(int N, double const* x, int incx, double* y, int incy)
{
   if (incx == 1 && incy == 1)
   {
      std::memcpy(y, x, N*sizeof(double));
   }
   else
   {
      for (int i = 0; i < N; ++i)
      {
         *y = *x;
         x += incx;
         y += incy;
      }
   }
}

inline
void
vector_copy(int N, std::complex<double> const* x, int incx, std::complex<double>* y, int incy)
{
   if (incx == 1 && incy == 1)
   {
      std::memcpy(y, x, N*sizeof(std::complex<double>));
   }
   for (int i = 0; i < N; ++i)
   {
      *y = *x;
      x += incx;
      y += incy;
   }
}

//
// vector_copy_scaled
//

void
vector_copy_scaled(int N, double alpha, double const* x, int incx, double* y, int incy)
{
   for (int i = 0; i < N; ++i)
   {
      *y = alpha * (*x);
      x += incx;
      y += incy;
   }
}

void
vector_copy_scaled(int N, std::complex<double> alpha,
                   std::complex<double> const* x, int incx,
                   std::complex<double>* y, int incy)
{
   for (int i = 0; i < N; ++i)
   {
      *y = alpha * (*x);
      x += incx;
      y += incy;
   }
}

