namespace blas
{

template <typename T>
template <typename U>
Vector<T>::Vector(std::initializer_list<U> m, arena Arena_)
   : Arena(Arena_),
     Size(m.size())
{
   // Some slight contortions to initialize a column-major matrix from
   // a row major initializer list
   Data = Arena.allocate_type<T>(Size);
   std::copy(m.begin(), m.end(), Data);
}

template <typename T>
template <typename U>
Vector<T>::Vector(VectorRef<T, Vector<T>, U> const& E, arena Arena_)
   : Size(E.size()),
     Arena(Arena_),
     Data(Arena.allocate(Size, sizeof(T)))
{
   assign(*this, E.as_derived());
}

template <typename T>
Vector<T>::Vector(int Size_, arena Arena_)
   : Arena(Arena_), Size(Size_), Data(Arena.allocate_type<T>(Size_))
{
}

} // namespace blas
