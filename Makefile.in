# turn off some implicit rules that we don't want
%.o : %.cpp
%.o : %.cc
%.o : %.c
%.o : %.f

# we don't need this rule (it doesnt work with repsect to dependency generation anyway)
#% : %.o
#	$(CXX) $(CXXFLAGS) $(CXXFLAGS_$@) $(LDFLAGS) $^ $(LIB) $(LIBS_$@) -o $@

#When building
# from the source directory, the %.cpp ends up listed twice,
# once as %.cpp and once as ./%.cpp
# so we filter this out with $(filter-out ./%, $(filter %.o %.cpp, $^))
% : %.cpp
	@$(MAKEDEPEND_INFO)
	$(CXX) $(CXXFLAGS) $(CXXFLAGS_$@) $(LDFLAGS) $(filter-out ./%, $(filter %.o %.cpp, $^)) $(LIBS_$@) $(LIB) -o $@

%.o : %.cpp %.d
	@$(MAKEDEPEND_INFO)
	$(CXX) $(CXXFLAGS) $(CXXFLAGS_$@) -c $< -o $@

%.o : %.f
	$(F77) $(FFLAGS) -c $< -o $@

.SUFFIXES: .cu .cu.o

%.cu.o : %.cu
	$(NVCC) $(NVFLAGS) -c $< -o $@

gpu.o : $(cudakernelobj)
	$(NVCC) $(NVFLAGS) $(CUDA_LDFLAGS) -dlink $< -o $@

%.d :
	\


