	for i in $(default-models) ; do \
	$(INSTALL_PROGRAM) $$i $(BINDIR) ; done

install-all-models : $(all-models) install-dirs
	for i in $(all-models) ; do \
	$(INSTALL_PROGRAM) $$i $(BINDIR) ; done


